<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShopList.Gui.ViewModels"
             x:DataType="viewmodel:ShopListViewModel"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="Lista De Compras">
    <Grid
        RowDefinitions="Auto,*"
        Padding="8"
        RowSpacing="6"

        >

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="Auto,*,Auto,Auto"
            RowDefinitions="Auto,Auto"
            Padding="8"
            RowSpacing="4"
            ColumnSpacing="4"
            >


            <Label
             Grid.Row="0"
             Grid.Column="0"
             Text="Producto:"
             VerticalOptions="Center"
             HorizontalOptions="End"
             FontSize="Medium"   
                
             />

            <Entry
              Grid.Row="0"
              Grid.Column="1"
              BackgroundColor="#f0f0f0"
              FontSize="Medium"   
              />

            <Label
             Grid.Row="1"
             Grid.Column="0"
             Text="Cantidad:"
             HorizontalOptions="End"
             VerticalOptions="Center"
             FontSize="Medium"   
                
             />

            <Entry
              Grid.Row="1"
              Grid.Column="1"
              BackgroundColor="#f0f0f0"
              VerticalOptions="Center"
              FontSize="Medium"   
              />

            <Button
             Text="+"
             Grid.Row="0"
             Grid.Column="2"
             FontSize="Medium"   
             />

            <Button
             Text="X"
             Grid.Row="1"
             Grid.Column="2"
             FontSize="Medium"   
             />




        </Grid>

        <CollectionView
            
            ItemsSource="{Binding Items}"
            Grid.Row="1"
            Grid.Column="0"
            EmptyView="AUN NO SE HAN REGISTRADO PRODUCTOS"
            BackgroundColor="Gray">
            
            
            
            
        </CollectionView>
        
    </Grid>
    
</ContentPage>